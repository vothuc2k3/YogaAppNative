<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <!-- Session Number -->
        <ImageView
            android:id="@+id/icon_session_number"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_bullet_point"
            app:layout_constraintBottom_toBottomOf="@id/tv_session_number_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_session_number_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Session:"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/icon_session_number"
            app:layout_constraintTop_toTopOf="@id/icon_session_number" />

        <TextView
            android:id="@+id/tv_session_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_session_number_label"
            app:layout_constraintTop_toTopOf="@id/icon_session_number" />

        <!-- New Field: Session Date -->
        <ImageView
            android:id="@+id/icon_session_date"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_sessions"
            app:layout_constraintBottom_toBottomOf="@id/tv_session_date_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_session_number" />

        <TextView
            android:id="@+id/tv_session_date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Date:"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/icon_session_date"
            app:layout_constraintTop_toTopOf="@id/icon_session_date" />

        <TextView
            android:id="@+id/tv_session_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_session_date_label"
            app:layout_constraintTop_toTopOf="@id/icon_session_date" />

        <!-- Price -->
        <ImageView
            android:id="@+id/icon_price"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_price_tag"
            app:layout_constraintBottom_toBottomOf="@id/tv_session_price_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_session_date" />

        <TextView
            android:id="@+id/tv_session_price_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Price:"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/icon_price"
            app:layout_constraintTop_toTopOf="@id/icon_price" />

        <TextView
            android:id="@+id/tv_session_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_session_price_label"
            app:layout_constraintTop_toTopOf="@id/icon_price" />

        <!-- Room -->
        <ImageView
            android:id="@+id/icon_room"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_classroom"
            app:layout_constraintBottom_toBottomOf="@id/tv_session_room_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_session_price" />

        <TextView
            android:id="@+id/tv_session_room_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Room:"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/icon_room"
            app:layout_constraintTop_toBottomOf="@id/tv_session_price" />

        <TextView
            android:id="@+id/tv_session_room"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/tv_session_room_label"
            app:layout_constraintTop_toBottomOf="@id/tv_session_price" />

        <ImageView
            android:id="@+id/icon_note"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_note"
            app:layout_constraintBottom_toBottomOf="@id/tv_session_note_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_session_room" />

        <TextView
            android:id="@+id/tv_session_note_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:text="Note:"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/icon_note"
            app:layout_constraintTop_toBottomOf="@id/tv_session_room" />

        <TextView
            android:id="@+id/tv_session_note"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@id/tv_session_note_label"
            app:layout_constraintTop_toBottomOf="@id/tv_session_room" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
