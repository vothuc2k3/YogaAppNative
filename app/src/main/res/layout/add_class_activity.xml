<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AddClassActivity"
    android:padding="16dp">

    <!-- Toolbar with Back Button -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:title="Create new class"
        android:textColor="@color/white"
        app:navigationIcon="@drawable/ic_back_arrow"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Class Type -->
    <TextView
        android:id="@+id/label_class_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Class Type"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <Spinner
        android:id="@+id/spinner_class_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:entries="@array/class_type_array"
        app:layout_constraintTop_toBottomOf="@id/label_class_type"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Class Capacity -->
    <TextView
        android:id="@+id/label_class_capacity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capacity"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/spinner_class_type"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <NumberPicker
        android:id="@+id/number_picker_capacity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/label_class_capacity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Class Duration -->
    <TextView
        android:id="@+id/label_class_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Duration (minutes)"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/number_picker_capacity"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/input_class_duration"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="e.g., 60"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/label_class_duration"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Class Price -->
    <TextView
        android:id="@+id/label_class_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price (in USD)"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/input_class_duration"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/input_class_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="e.g., 15.00"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@id/label_class_price"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Class Start Time -->
    <TextView
        android:id="@+id/label_class_start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Time"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/input_class_price"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/input_class_start_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Select Time"
        android:focusable="false"
        app:layout_constraintTop_toBottomOf="@id/label_class_start_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Description -->
    <TextView
        android:id="@+id/label_class_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/input_class_start_time"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/input_class_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Optional"
        android:inputType="textMultiLine"
        android:minLines="3"
        app:layout_constraintTop_toBottomOf="@id/label_class_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Submit Button -->
    <Button
        android:id="@+id/btn_submit_class"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Create Class"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/input_class_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
