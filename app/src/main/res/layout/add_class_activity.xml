<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    tools:context=".activities.AddClassActivity">

    <!-- ScrollView wraps the entire layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Toolbar -->
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                android:title="Create new class"
                android:titleTextColor="@color/white" />

            <!-- Class Type -->
            <TextView
                android:id="@+id/label_class_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Class Type"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <Spinner
                android:id="@+id/spinner_class_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:entries="@array/class_type_array" />

            <!-- Instructor -->
            <TextView
                android:id="@+id/label_instructor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Instructor"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <Spinner
                android:id="@+id/spinner_instructor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:entries="@array/dummy_instructor_array" />

            <!-- Day of Week -->
            <TextView
                android:id="@+id/label_day_of_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day of the Week"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <Spinner
                android:id="@+id/spinner_day_of_week"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:entries="@array/days_of_week_array" />

            <!-- Start Time -->
            <TextView
                android:id="@+id/label_class_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Time"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/input_class_start_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select Time"
                android:focusable="false"
                android:layout_marginTop="8dp" />

            <!-- First Day (Start Date) -->
            <TextView
                android:id="@+id/label_first_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First Day (Start Date)"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/input_start_at"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select Start Date"
                android:focusable="false"
                android:layout_marginTop="8dp" />

            <!-- Number of Sessions -->
            <TextView
                android:id="@+id/label_class_sessions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number of Sessions"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <NumberPicker
                android:id="@+id/number_picker_sessions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"/>

            <!-- Description -->
            <TextView
                android:id="@+id/label_class_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/input_class_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Optional"
                android:minLines="3"
                android:inputType="textMultiLine"
                android:layout_marginTop="8dp" />

            <!-- Class Capacity -->
            <TextView
                android:id="@+id/label_class_capacity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Class Capacity"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <NumberPicker
                android:id="@+id/number_picker_capacity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" />

            <!-- Class Duration -->
            <TextView
                android:id="@+id/label_class_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Class Duration (minutes)"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/input_class_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Duration"
                android:inputType="number"
                android:layout_marginTop="8dp" />

            <!-- Submit Button -->
            <Button
                android:id="@+id/btn_submit_class"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimary"
                android:text="Create Class"
                android:textColor="@android:color/white"
                android:layout_marginTop="16dp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
